<section class="contact _pt70 _pb70">
    <div class="container">
        <h2 class="title-section-1 text-center _pb45">Entre em <span>contato</span></h2>
        <div class="row">
            <div class="col-lg-6">
                <form action="/enviar-mensagem" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control input-contact" id="inputNameCreate" name="name" placeholder="Nome">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control input-contact" id="inputCompanyCreate" name="company" placeholder="Empresa">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" class="form-control input-contact" id="inputEmailCreate" name="email" placeholder="Email">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control input-contact" id="inputTelephoneCreate" name="telephone" placeholder="Telefone">
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <select class="form-control input-contact" id="inputSubjectCreate" name="subject" placeholder="Assunto">
                                    <option value="Contabilidade">Contabilidade</option>
                                    <option value="Departamento Pessoal">Departamento Pessoal</option>
                                    <option value="Fiscal">Fiscal</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <textarea class="form-control input-contact" id="inputMessageCreate" name="message" placeholder="Mensagem" cols="30" rows="6"></textarea>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <button class="btn btn-contact">Enviar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-lg-6">
