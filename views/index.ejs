    <main class="main-content">
        <section class="carousel">
            <div class="owl-carousel owl-theme owl-home">
                <% banners.forEach((row) => { %>
                <div class="item carousel-image" style="background-image: url('<%= row.bPhoto %>')">
                    <div class="overlay"></div>
                    <div class="container">
                        <div class="carousel-content">
                            <h1 class="title-carousel text-center">
                                <%= row.bTitle %>
                            </h1>
                            <p class="subtitle-carousel text-center">
                                <%= row.bSubtitle %>
                            </p>
                            <div class="d-flex justify-content-center">
                                <a href="<%= row.bHref %>" class="btn btn-carousel _pt15 _pb15">
                                    Conheça nosso Trabalho
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </section>
        
        <section class="about _pt70 _pb70">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <h2 class="title-section-1">O <span>Escritório</span></h2>
                        <p class="text-about text-justify">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis rutrum lectus sit amet semper pretium. Fusce et justo orci. Sed eu placerat purus. Vivamus blandit diam nisl, sit amet elementum dolor consectetur at. Praesent semper finibus molestie. Vestibulum finibus venenatis sollicitudin. Nunc ac finibus sem, at malesuada diam. Nullam a lorem augue. Praesent vulputate augue non quam tincidunt, sit amet condimentum erat imperdiet.
                        </p>
                    </div>

                    <div class="col-lg-6">
                        <div class="owl-carousel owl-theme owl-office">
                            <div class="item">
                                <img src="images/carousel.jpg" class="img-fluid img-office" alt="">
                            </div>

                            <div class="item">
                                <img src="images/carousel.jpg" class="img-fluid img-office" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="services _pt70 _pb70">
            <div class="container">
                <h2 class="title-section-1 text-center _pb15">
                    Nossos <span>Serviços</span>
                </h2>
                
                <div class="row">
                    <div class="col-lg-4 _pt30">
                        <div class="card-service">
                            <i class="fa fa-line-chart icon-service _pb15"></i>
                            <h4 class="title-service text-center">Contabilidade</h4>
                            <p class="subtitle-service text-center">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam quis massa nibh. Praesent volutpat enim eget maximus blandit. Etiam tempus felis sollicitudin, pretium sapien in, aliquet dui.
                            </p>
                            <a href="#" class="btn btn-services">
                                Saiba Mais
                                <i class="fa fa-long-arrow-right icon-btn-services _pl5"></i>
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-4 _pt30">
                        <div class="card-service">
                            <i class="fa fa-users icon-service _pb15"></i>
                            <h4 class="title-service text-center">Departamento Pessoal</h4>
                            <p class="subtitle-service text-center">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam quis massa nibh. Praesent volutpat enim eget maximus blandit. Etiam tempus felis sollicitudin, pretium sapien in, aliquet dui.
                            </p>
                            <a href="#" class="btn btn-services">
                                Saiba Mais
                                <i class="fa fa-long-arrow-right icon-btn-services _pl5"></i>
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-4 _pt30">
                        <div class="card-service">
                            <i class="fa fa-calculator icon-service _pb15"></i>
                            <h4 class="title-service text-center">Fiscal</h4>
                            <p class="subtitle-service text-center">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam quis massa nibh. Praesent volutpat enim eget maximus blandit. Etiam tempus felis sollicitudin, pretium sapien in, aliquet dui.
                            </p>
                            <a href="#" class="btn btn-services">
                                Saiba Mais
                                <i class="fa fa-long-arrow-right icon-btn-services _pl5"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="lead _pt70 _pb70" style="background-image: url('images/carousel.jpg')">
            <div class="overlay"></div>
            <div class="container">
                <div class="lead-content">
                    <div>
                        <h3 class="text-lead text-center">As melhores soluções para a sua empresa</h3>
                    </div>
                    <div>
                        <a href="#" class="btn btn-lead">Saiba Mais</a>
                    </div>
                </div>
            </div>
        </section>

        <section class="news _pt70 _pb70">
            <div class="container">
                <h2 class="title-section-1 _pb40">Notícias <span>Recentes</span></h2>
                <div class="owl-carousel owl-theme owl-news">
                    <% news.forEach((row) => { %>
                    <div class="item">
                        <a href="#" class="news-link">
                            <figure class="_mb10">
                                <div class="overlay">
                                    <i class="fa fa-plus-circle"></i>
                                </div>
                                <img src="<%= row.nPhoto %>" alt="">
                            </figure>
                            <div class="news-content">
                                <h3 class="title-news text-justify">
                                    <%= row.nTitle %>
                                </h3>
                                <p class="subtitle-news text-justify">
                                    <%= row.nSubtitle %>
                                </p>
                            </div>
                        </a>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section class="contact _pt70 _pb70">
            <div class="container">
                <h2 class="title-section-1 text-center _pb45">Entre em <span>contato</span></h2>

                <div class="row">
                    <div class="col-lg-6">
                        <form action="" class="form-contact">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control input-contact" id="nomeForm" name="nome" placeholder="Nome">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control input-contact" id="empresaForm" name="empresa" placeholder="Empresa">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="email" class="form-control input-contact" id="emailForm" name="email" placeholder="Email">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control input-contact" id="telefoneForm" name="telefone" placeholder="Telefone">
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <select class="form-control input-contact" id="assuntoForm" name="assunto" placeholder="Assunto">
                                            <option value="">Contabilidade</option>
                                            <option value="">Departamento Pessoal</option>
                                            <option value="">Fiscal</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea class="form-control input-contact" id="mensagemForm" name="mensagem" placeholder="Mensagem" cols="30" rows="6"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button class="btn btn-contact">Enviar</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="col-lg-6">
                        <div class="map-contact">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3714.5312887666805!2d-48.50350698464959!3d-21.408352491501958!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94b939688995dacf%3A0xcb1d8e700a8f203d!2sRua+Marechal+Deodoro%2C+1148%2C+Taquaritinga+-+SP%2C+15900-000!5e0!3m2!1spt-BR!2sbr!4v1563802655865!5m2!1spt-BR!2sbr" width="100%" height="220px" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>

                        <div class="information-contact _pt20">
                            <a href="#" class="text-information">
                                <i class="fa fa-phone icon-information _pr5"></i>
                                (16) 3253-2696
                            </a>

                            <br/>

                            <a href="#" class="text-information">
                                <i class="fa fa-clock-o icon-information _pr5"></i>
                                Seg à Sex: <span>08:00 às 11:00 - 13:00 às 17:00</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
<%- include('inc/footer') -%>