<%- include('inc/header') -%> 
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
            E-mails
        </h1>
        <ol class="breadcrumb">
          <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
          <li class="active">E-mails</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content container-fluid">

        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Lista</h3>
            <a href="#" class="btn btn-xs pull-right btn-success" data-toggle="modal" data-target="#modal-create"><i
                class="fa fa-plus"></i> Novo</a>
          </div>
          <!-- /.box-header -->
          <div class="box-body no-padding">
            <%
              let register = row.register;
              let year = register.getFullYear();
              let month = register.getMonth() + 1;
              let date = register.getDate();

              if(month <= 9) {
                  month = '0' + month;
              }

              if(date <= 9) {
                  date = '0' + date;
              }

              register = date + '/' + month + '/' + year;
            %>
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Nome</th>
                  <th>Empresa</th>
                  <th>E-mail</th>
                  <th>Telefone</th>
                  <th>Mensagem</th>
                  <th>Data</th>
                  <th style="min-width: 134px;">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach((row) => { %>
                <tr data-row="<%= JSON.stringify(row); %>">
                  <td><%= row.id %></td>
                  <td><%= row.name %></td>
                  <td><%= row.company %></td>
                  <td><%= row.email %></td>
                  <td><%= row.telephone %></td>
                  <td><%= row.message %></td>
                  <td><%= register %></td>
                  <td><button type="button" class="btn btn-xs btn-danger btn-delete"><i
                        class="fa fa-trash"></i> Excluir</button></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

<%- include('inc/footer') -%>

<script src="dist/js/hcode-grid.js"></script>

<script>
    new HcodeGrid({
        deleteUrl: '/admin/emails/${data.id}',
        deleteMsg: 'Deseja realmente excluir o email de ${data.name}?',
    });
</script>